{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",   // Set to react-jsx for React 17+ JSX transform
    "isolatedModules": false,
    "outDir": "dist",
    "rootDir": "../../../packages",
    "types": ["node", "jest", "react"],  // Include Jest and React types
    "typeRoots": [
      "@types",
      "../../node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
